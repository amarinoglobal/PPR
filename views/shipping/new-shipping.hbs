<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nuevo envío</h1>

            <hr>

            <form action="/envios/registrar" method="POST">

                <div class="form-group">
                    <label for="date">Fecha de envío</label>
                    <input type="date" class="form-control" name="date" id="date">
                </div>
                <div class="form-group">
                    <label for="warehouse">Reparto</label>

                    <select name="warehouse" id="warehouse" class="form-control">
                        <option value="">Almacen</option>
                        {{#each warehouse}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="lat">Longitud</label>
                    <input type="text" class="form-control" name="lat" id="lat">
                </div>

                <div class="form-group">
                    <label for="lng">Latitud</label>
                    <input type="text" class="form-control" name="lng" id="lng">
                </div>
                <button type="submit" class="btn btn-outline-dark btn-block btn-lg">Crear almacen</button>

            </form>
            {{#if errorMessage}}
            <div
                style="margin-top: 20px; padding: 5px; color: white; background: rgb(247, 0, 0); text-align: center; font-size: .95em">
                {{errorMessage}}
            </div>
            {{/if}}
        </div>

    </div>

</div>