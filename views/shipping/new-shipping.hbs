<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nuevo env√≠o</h1>

            <hr>

            <form action="/envios/registrar" method="POST">

                <div class="form-group">
                    <input type="text" class="form-control" name="date" id="date" placeholder="Fecha de envio"
                        onfocus="(this.type='date')">
                </div>

                <div class="form-group">

                    <select name="status" id="status" class="form-control">
                        <option value="">Estado de la solicitud de envio</option>
                        <option>APROBADO</option>
                        <option>PENDIENTE</option>
                        <option>RECHAZADO</option>
                    </select>

                </div>

                <div class="form-group">

                    <select name="warehouse" id="warehouse" class="form-control" placeholder="Almacen">
                        <option disabled selected>Elige un Almacen</option>
                        {{#each warehouse}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>

                </div>

                <div class="form-group">

                    <select multiple name="equipment" id="equipment" class="form-control" placeholder="Equipos">
                        <option disabled selected>Elige los equipos a enviar</option>
                        {{#each equipment}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>

                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="lat" id="lat" placeholder="Longitud">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="lng" id="lng" placeholder="Latitud">
                </div>

                <button type="submit" class="btn btn-outline-dark btn-block btn-lg">Crear almacen</button>

            </form>

            {{#if errorMessage}}
            <div
                style="margin-top: 20px; padding: 5px; color: white; background: rgb(247, 0, 0); text-align: center; font-size: .95em">
                {{errorMessage}}
            </div>
            {{/if}}

        </div>

    </div>

</div>