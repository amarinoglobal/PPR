<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar almacen</h1>

            <hr>

            <form action="/almacenes/{{id}}/editar" method="POST">

                <div class="form-group">
                    <label for="name">Nombre almacen</label>
                    <input type="text" class="form-control" name="name" id="name" value="{{name}}">
                </div>

                <div class="form-group">
                    <label for="lat">Longitud</label>
                    <input type="text" class="form-control" name="lat" id="lat" value="{{location.coordinates.[0]}}">
                </div>

                <div class=" form-group">
                    <label for="lng">Latitud</label>
                    <input type="text" class="form-control" name="lng" id="lng" value="{{location.coordinates.[1]}}">
                </div>
                <button type="submit" class="btn btn-outline-dark btn-block btn-lg">Guardar cambios</button>

            </form>

            {{#if errorMessage}}
            <div
                style="margin-top: 20px; padding: 5px; color: white; background: rgb(247, 0, 0); text-align: center; font-size: .95em">
                {{errorMessage}}
            </div>
            {{/if}}

        </div>

    </div>

</div>