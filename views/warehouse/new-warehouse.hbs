<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nuevo almacen</h1>

            <hr>

            <form class="form" action="/almacenes/registrar" method="POST">

                <div class="form-group">

                    <input type="text" class="form-control" name="name" id="name" placeholder="Nombre de almacen">
                </div>

                <div class="form-group">

                    <input type="text" class="form-control" name="lat" id="lat" placeholder="Longitud">
                </div>

                <div class="form-group">

                    <input type="text" class="form-control" name="lng" id="lng" placeholder="Latitud">
                </div>
                <button type="submit" class="btn btn-outline-dark btn-block btn-lg">Crear almacen</button>

            </form>
            {{#if errorMessage}}
            <div
                style="margin-top: 20px; padding: 5px; color: white; background: rgb(247, 0, 0); text-align: center; font-size: .95em">
                {{errorMessage}}
            </div>
            {{/if}}
        </div>

    </div>

</div>