<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nuevo equipo</h1>

            <hr>

            <form action="/equipamiento/registrar" method="POST">

                <div class="form-group">
                    <input type="text" class="form-control" name="name" id="name" placeholder="Nombre">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="brand" id="brand" placeholder="Modelo">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="serie" id="serie" placeholder="Numero de serie">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="description" id="description"
                        placeholder="DescripciÃ³n">
                </div>

                <div class="form-group">

                    <select name="status" id="status" class="form-control" placeholder="Status">
                        <option disabled selected>Estado del equipo</option>
                        <option value="OPERATIVO">OPERATIVO</option>
                        <option value="ESTROPEADO">ESTROPEADO</option>
                        <option value="MANTENIMIENTO">MANTENIMIENTO</option>
                        <option value="EXTRAVIADO">EXTRAVIADO</option>
                    </select>

                </div>

                <div class="form-group">

                    <select name="warehouse" id="warehouse" class="form-control" placeholder="Almacen">
                        <option disabled selected>Elige un Almacen</option>
                        {{#each warehouse}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>

                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="lat" id="lat" placeholder="Latitud">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="lng" id="lng" placeholder="Longitud">
                </div>

                <button type="submit" class="btn btn-outline-dark btn-block btn-lg">Crear equipo</button>

            </form>

            {{#if errorMessage}}
            <div
                style="margin-top: 20px; padding: 5px; color: white; background: rgb(0, 94, 20); text-align: center; font-size: .95em">
                {{errorMessage}}
            </div>
            {{/if}}

        </div>

    </div>

</div>